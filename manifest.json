{
  "manifest_version": 3,
  "name": "Rainbow Highlighter & Notes",
  "version": "3.4",
  "description": "Highlight văn bản và ghi chú. Creator: Quỳnh Như | Dev: Emsired",
  "author": "Emsired",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Rainbow Highlighter",
    "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ]
}